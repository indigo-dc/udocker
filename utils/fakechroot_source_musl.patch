+LOCAL int
+fakechroot_execute(char *buffer, char *cmd, char *args[])
+{
+    int link[2];
+    pid_t pid;
+    int len = 0;
+
+    if (pipe(link) == -1)
+        return -1;
+
+    if ((pid = fork()) == -1) {
+        return -1;
+
+    } else if (! pid) {
+
+        dup2(link[1], STDOUT_FILENO);
+        close(link[0]);
+        close(link[1]);
+        char *env[] = { NULL };
+        debug("fakechroot_execute (\"%s\")", cmd);
+        next_execve(cmd, args, env);
+        exit(1);
+
+    } else {
+
+        int status = 0;
+        close(link[1]);
+        if (buffer) {
+            if ((len = read(link[0], buffer, PATH_MAX -1)) > -1)
+                buffer[len] = '\0';
+        }
+
+        waitpid(pid, &status, 0);
+        close(link[0]);
+        if (! WIFEXITED(status))
+            return -1;
+
+    }
+    return len;
+}

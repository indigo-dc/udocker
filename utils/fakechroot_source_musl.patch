+LOCAL int
+fakechroot_count_char(char *buffer, char ch, int buffer_len)
+{
+    char *b;
+    int count = 0;
+    for(b = buffer; b < buffer + buffer_len; b++)
+        if (*b == ch) count++;
+    return count;
+}

+        }
+    }
+
+    if (patch_patchelf && patch_elfloader && filename) {
+
+        if (patch_last_time) {
+            struct stat fattr;
+            if (stat(filename, &fattr) == -1 || fattr.st_mtime < patch_last_time) {
+                return 0; 
